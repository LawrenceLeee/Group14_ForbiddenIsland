<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="1024.0" prefWidth="1024.0" spacing="20" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forbidden.island.controller.GameOptionsController">
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>

    <StackPane>
        <ImageView fitHeight="1024" fitWidth="1024" pickOnBounds="true">
            <image>
                <Image url="@../images/background.jpg" />
            </image>
        </ImageView>

        <VBox alignment="CENTER" spacing="40.0" translateY="75.0">

            <Button fx:id="studyButton" onAction="#showStudy" prefHeight="50.0" prefWidth="50.0" styleClass="study-button">
                <graphic>
                    <ImageView fitHeight="619.0" fitWidth="1081.0" scaleX="0.25" scaleY="0.25">
                        <Image url="@../images/study_button.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="startGameButton" onAction="#startGame" prefHeight="80.0" prefWidth="50.0" styleClass="start-button">
                <graphic>
                    <ImageView fitHeight="198.0" fitWidth="350.0" preserveRatio="true" scaleX="0.8" scaleY="0.8" translateX="5.0">
                        <Image url="@../images/start_button.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="backButton" onAction="#backToMenu" prefHeight="50.0" prefWidth="50.0" styleClass="back-button" text="BACK">
                <graphic>
                    <ImageView fitHeight="418.0" fitWidth="691.0" scaleX="0.4" scaleY="0.4" translateX="-230.0">
                        <Image url="@../images/back_button.png" />
                    </ImageView>
                </graphic>
            </Button>
         <StackPane.margin>
            <Insets top="100.0" />
         </StackPane.margin>
        </VBox>
    </StackPane>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="1024.0" prefWidth="1024.0" spacing="20" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forbidden.island.controller.GameSettingsController">
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>

    <StackPane>
        <ImageView fitHeight="1024" fitWidth="1024" pickOnBounds="true">
            <image>
                <Image url="@../images/background.jpg" />
            </image>
        </ImageView>

        <VBox alignment="CENTER" spacing="30.0" translateX="100.0" translateY="80.0">
            <HBox spacing="10" translateX="300.0">
                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(three-pass-box, black, 2, 0, 0, 0);" text="Number of Players:" />
                <ComboBox fx:id="playerComboBox" style="-fx-font-size: 16px;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="2" />
                            <String fx:value="3" />
                            <String fx:value="2" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <HBox spacing="10" translateX="300.0">
                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(three-pass-box, black, 2, 0, 0, 0);" text="Game Mode:" />
                <ComboBox fx:id="modeComboBox" style="-fx-font-size: 16px;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="即时制" />
                            <String fx:value="回合制" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <HBox spacing="10" translateX="300.0">
                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(three-pass-box, black, 2, 0, 0, 0);" text="Turn Time:" />
                <ComboBox fx:id="turnTimeComboBox" style="-fx-font-size: 16px;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="不限时间" />
                            <String fx:value="慢速" />
                            <String fx:value="普通" />
                            <String fx:value="快速" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <HBox spacing="10.0">
                <Button fx:id="startGameButton" minWidth="250.0" onAction="#startGame" prefHeight="64.0" prefWidth="235.0" styleClass="start-button" translateX="280.0" translateY="20.0">
                    <graphic>
                        <ImageView fitHeight="169.0" fitWidth="309.0" scaleX="0.8" scaleY="0.8">
                            <Image url="@../images/start_button.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="backButton" onAction="#backToMenu" prefHeight="50.0" prefWidth="50.0" styleClass="back-button" text="BACK" translateX="10.0" translateY="120.0">
                    <graphic>
                        <ImageView fitHeight="750.0" fitWidth="1207.0" scaleX="0.2" scaleY="0.18" translateX="-480.0">
                            <Image url="@../images/back_button.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
         <StackPane.margin>
            <Insets top="30.0" />
         </StackPane.margin>
        </VBox>
    </StackPane>
</VBox>

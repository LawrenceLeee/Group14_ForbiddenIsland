<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="1024.0" prefWidth="1024.0" spacing="20" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forbidden.island.controller.SettingsController">
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>

    <StackPane>
        <ImageView fitHeight="1024" fitWidth="1024" pickOnBounds="true">
            <image>
                <Image url="@../images/background.jpg" />
            </image>
        </ImageView>

        <VBox alignment="CENTER" scaleX="1.2" scaleY="1.2" spacing="20" translateX="150.0" translateY="100.0">
            <HBox spacing="10" translateX="300.0">
                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(three-pass-box, black, 2, 0, 0, 0);" text="Difficulty:" />
                <ComboBox fx:id="difficultyComboBox" style="-fx-font-size: 16px;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="新手" />
                            <String fx:value="标准" />
                            <String fx:value="精英" />
                            <String fx:value="传奇" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <HBox spacing="10" translateX="300.0">
                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(three-pass-box, black, 2, 0, 0, 0);" text="Island Map:" />
                <ComboBox fx:id="mapComboBox" style="-fx-font-size: 16px;">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="1" />
                        <String fx:value="2" />
                        <String fx:value="3" />
                        <String fx:value="4" />
                    </FXCollections>
                </items>
                </ComboBox>
            </HBox>

            <HBox spacing="10">
                <Button fx:id="saveButton" onAction="#saveSettings" prefHeight="130.0" prefWidth="543.0" scaleX="0.4" scaleY="0.4" styleClass="save-button" text="save" translateX="-20.0">
                    <graphic>
                        <ImageView fitHeight="375.0" fitWidth="699.0" translateX="-100.0">
                            <Image url="@../images/save.png" /> <!-- 替换为您的图像路径 -->
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="backButton" maxHeight="100.0" maxWidth="261.0" minHeight="3.0" minWidth="136.0" onAction="#backToMenu" prefHeight="100.0" prefWidth="261.0" styleClass="back-button" text="back" translateX="-80.0" translateY="25.0">
                    <graphic>
                        <ImageView fitHeight="353.0" fitWidth="636.0" scaleX="0.4" scaleY="0.4" translateX="-220.0" translateY="-10.0">
                            <Image url="@../images/back_button.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </StackPane>
</VBox>

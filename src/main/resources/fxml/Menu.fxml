<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="1024.0" prefWidth="1024.0" spacing="20" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forbidden.island.controller.MenuController">
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>

    <StackPane>
        <ImageView fitHeight="1024" fitWidth="1024" pickOnBounds="true">
            <image>
                <Image url="@../images/background.jpg" />
            </image>
        </ImageView>

        <VBox alignment="CENTER" prefHeight="1061.0" prefWidth="1024.0" spacing="50.0" translateY="150.0">
            <Button fx:id="startButton" minWidth="229.0" onAction="#startGame" prefHeight="58.0" prefWidth="229.0" styleClass="start-button" translateX="-2.0">
                <graphic>
                    <ImageView fitHeight="173.0" fitWidth="302.0" preserveRatio="true">
                        <Image url="@../images/start_button.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="settingsButton" minWidth="219.0" onAction="#showSettings" prefHeight="66.0" prefWidth="219.0" styleClass="setting-button">
                <graphic>
                    <ImageView fitHeight="166.0" fitWidth="300.0">
                        <Image url="@../images/setting_button.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="exitButton" minWidth="219.0" onAction="#exitGame" prefHeight="62.0" prefWidth="219.0" styleClass="exit-button" text="EXIT" translateX="10.0">
                <graphic>
                    <ImageView fitHeight="164.0" fitWidth="306.0" translateX="-50.0">
                        <Image url="@../images/exit_button.png" />
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="rulesButton" onAction="#showRules" scaleX="0.7" scaleY="0.7" styleClass="round-button" translateX="-250.0" translateY="-320.0">
                <graphic>
                    <ImageView>
                        <Image url="@../images/Lbutton.png" /> <!-- 替换为您的图像路径 -->
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="rightRoundButton" scaleX="0.7" scaleY="0.7" styleClass="round-button" translateX="230.0" translateY="-420.0">
                <graphic>
                    <ImageView>
                        <Image url="@../images/Rbutton.png" />
                    </ImageView>
                </graphic>
            </Button>
         <StackPane.margin>
            <Insets top="60.0" />
         </StackPane.margin>

        </VBox>
    </StackPane>
</VBox>

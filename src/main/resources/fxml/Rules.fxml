<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="1024.0" prefWidth="1024.0" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forbidden.island.controller.RulesController">
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>

    <StackPane>
        <ImageView fitHeight="1024" fitWidth="1024" pickOnBounds="true">
            <image>
                <Image url="@../images/background.jpg" />
            </image>
        </ImageView>

        <VBox alignment="CENTER" spacing="10.0" translateX="20.0" translateY="20.0">

            <StackPane fx:id="contentStackPane" prefHeight="1024" prefWidth="1024">
                <ImageView fx:id="ruleImageView" fitHeight="800" fitWidth="800" pickOnBounds="true" translateY="200" />
            </StackPane>

            <HBox spacing="10.0" translateX="18.0" translateY="300.0">
                <Button fx:id="previousButton" onAction="#previousPage" prefHeight="398.0" prefWidth="405.0" scaleX="0.15" scaleY="0.15" styleClass="round-button" translateX="550.0" translateY="-320.0">
                    <graphic>
                        <ImageView fitHeight="507.0" fitWidth="460.0" preserveRatio="true">
                            <Image url="@../images/previous.png" /> <!-- 上一页按钮的图像路径 -->
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="backButton" onAction="#backToMenu" prefHeight="327.0" prefWidth="1010.0" scaleX="0.2" scaleY="0.1" translateX="18.0" translateY="-180.0">
                    <graphic>
                        <ImageView fitHeight="332.0" fitWidth="656.0" scaleX="1.5" scaleY="3.0" translateX="-44.0">
                            <Image url="@../images/back_button.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="nextButton" onAction="#nextPage" prefHeight="1008.0" prefWidth="1027.0" scaleX="0.134" scaleY="0.134" styleClass="round-button" text="L" translateX="-550.0" translateY="-338.0">
                    <graphic>
                        <ImageView fitHeight="495.0" fitWidth="490.0">
                            <Image url="@../images/next.png" /> <!-- 下一页按钮的图像路径 -->
                        </ImageView>
                    </graphic>
                </Button>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </HBox>
        </VBox>
    </StackPane>
</VBox>
